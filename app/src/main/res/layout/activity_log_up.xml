<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="健康管理系统"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/log_up_user_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:hint="请输入用户名（至多20字）"
                android:maxLength="20"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/log_up_user_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="请输入用户邮箱（至多40字）"
                android:maxLength="40"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/log_up_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="请输入密码（至多20字）"
                android:maxLength="20"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/log_up_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="请确认密码（至多20字）"
                android:maxLength="20"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/log_up_age"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="请输入年龄"
                android:maxLength="3"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/log_up_sature"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="请输入身高"
                android:maxLength="5"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/log_up_weight"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="请输入体重"
                android:maxLength="5"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/log_up_BP"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="请输入血压"
                android:maxLength="5"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/log_up_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="注册"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_button_login"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>